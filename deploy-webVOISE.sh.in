root=webVOISE-@VERSION@-$HOSTTYPE

make -C mcc HOST=$HOST OSTYPE=$OSTYPE || exit 1

mkdir $root
cp -pr AUTHORS ChangeLog mcc NEWS README share $root

tar -cvf $root.tar $root

bzip2 -9 $root.tar

rm -rf $root
