root=WebVOISE-@VERSION@
rm -rf $root
mkdir -p $root $root/matlab $root/share/input $root/share/output

files="startup webDemoVOISE getDefaultVOISEParams VOISE \
      printVOISEsetup plotVOISE printFigure printSet printVD \
			randomSeeds parseArgs computeVD initVD isXinW addSeedToVD \
			updateNeighboursListsFromVoronoin getVRclosure \
			getVDOp divideVD computeHCThreshold homogeneousCriteria \
			prctile addSeedsToVR getVRvertices getEquidistantPoint \
			computeVDFast mergeVD removeSeedFromVD getCentroidVD \
			getCentroidSeed seedDist benchVD"

for f in $files ; do
  echo $f
	cp -p matlab/$f.m $root/matlab
done

cp -p $HOME/matlab/exportfig.m $root/matlab
cp -p $HOME/research/publications/hst/matlab/plotHistHC.m $root/matlab
cp -p share/VOISEtiming.mat $root/share
cp -p share/north_proj.mat $root/share/input

tar cvf $root.tar $root
bzip2 -9 $root.tar
